@model It_Swarm_Test_Project.Models.Database.Apartment

<h1>@(Model.CurrentMeter == null ? "Добавить новый счётчик" : "Заменить счётчик")</h1>

<form method="post" asp-action="ReplaceMeter">
    <input type="hidden" name="apartmentId" value="@Model.Id" />

    <div class="form-group">
        <label for="newMeterSerialNumber">Номер счётчика</label>
        <input type="text" id="newMeterSerialNumber" name="newMeterSerialNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="nextVerificationDate">Дата следующей проверки</label>
        <input type="date" id="nextVerificationDate" name="nextVerificationDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
